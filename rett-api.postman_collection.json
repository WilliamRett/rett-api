					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"  pm.response.to.have.status(200);",
									"});",
									"",
									"let json = {};",
									"try { json = pm.response.json(); } catch (e) {}",
									"",
									"if (json && json.access_token) {",
									"  pm.collectionVariables.set(\"token\", json.access_token);",
									"  if (json.token_type) pm.collectionVariables.set(\"token_type\", json.token_type);",
									"  if (json.expires_in) pm.collectionVariables.set(\"token_expires_in\", json.expires_in);",
									"",
									"  pm.test(\"Token captured\", function () {",
									"    pm.expect(json.access_token).to.be.a(\"string\");",
									"  });",
									"} else {",
									"  pm.test(\"Token not present in response\", function () {",
									"    pm.expect.fail(\"Missing access_token\");",
									"  });",
									"}",
